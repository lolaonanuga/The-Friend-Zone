<div class="page">

<%= form_for @message do |f| %>
  
  <div>

  <div class="form-group row"> 
<%= f.label :send_to %>
  <%= f.collection_select(:receiver_id, @user.match, :id, :username) %>
  <%= f.hidden_field :user_id, :value => @user.id %>
  </div>
<br>
<div class="form-group row"> 
  <%= f.label :content %>
  <%= f.text_area :content %> 
  </div>

<br>
<div class="form-group row"> 
  <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

</div>







</div>